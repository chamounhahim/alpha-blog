<div class="container">
    <%=render 'shared/errors', obj: @article%>
    <div id="article-form" class="p-4 shadow-sm rounded dark-text ">
    
        <%= form_with(model: @article, local: true) do |f|%>
            <div class="form-group-row mb-4">       
                <%= f.label :title, 'Titre', class: "col-2 col-form-label font-weight-bold light-text"%> 
                <div class="col-12 ">
                    <%= f.text_field :title,placeholder: 'Titre de l\'article', class: "form-control shadow-sm col-6"%>
                </div>
            </div>

            <div class="form-group-row mb-4">
                <%= f.label :description, class: "col-2 col-form-label font-weight-bold light-text"%> 
                <div class="col-12">
                    <%= f.text_area :description, rows:10, placeholder: 'Description de l\'article', class: "form-control shadow-sm"%> 
                </div>
            </div>

              <div class="form-group-row mb-4">
                <div class="col-12">
                    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%> 
                        <% cb.label(class: "checkbox-inline input_checkbox light-text mr-2") {cb.check_box(class: "checkbox mr-2") + cb.text}%>
                    <% end %>
                </div>
            </div>

    
            <div class="row justify-content-center">
                <%=f.submit class: "btn btn-outline-light btn-lg"%>
                <%= link_to "Annuler", articles_path, class: "btn btn-outline-light btn-lg ml-4"%>       
            </div>
        <% end %>
    </div>
</div>
