<h1 class="text-center mt-4 mb-2">Toutes les catégories</h1>
<% @categories.each do |category| %>
<div class="row justify-content-center">
    <div class="col-8 mt-2 mb-2">
            <div class="card shadow-sm bg-white rounded">
                <div class="card-header text-center font-weigth-bold dark-text">
                    <div class="row justify-content-center">
                        <%= link_to category.name, category_path(category), class: "dark-text font-weight-bold article-title mr-2" %>
                    </div>
                </div>
            <div class="card-footer text-muted text-center ">
                <small><%= t("article", count: category.articles.count)%></small>
            </div>
            </div>
            
    </div>
</div>
<% end %>

<div class="container d-flex justify-content-center flickr_pagination mb-4">
<%= will_paginate @categories, :previous_label => 'Précédent', :next_label => 'Suivant' %>
</div>