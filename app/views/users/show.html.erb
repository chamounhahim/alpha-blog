 <h1 class="text-center my-4"><%= @user.username%></h1>

 <%= gravatar_for @user, size: 150%>
 
 <% if logged_in? && (@user == current_user || current_user.admin?) %>
   <div class= "text-center my-4">
      <%=link_to "Modifier le profil", edit_user_path(@user), class: 'btn btn-success btn-md'%>
   </div>
 <% end %>
 
 
 <hr>

<h3 class="text-center my-4"> Articles</h3>

<%= render '/articles/article'%>

<div class="container d-flex justify-content-center flickr_pagination mb-4">
   <%= will_paginate @articles, :previous_label => 'Précédent', :next_label => 'Suivant' %>
</div>



    