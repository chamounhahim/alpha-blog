<h1 class="text-center mt-4">Se connnecter</h1>
<div class="container">
    <div id="article-form" class="p-4 shadow-sm rounded dark-text ">
    
        <%= form_with(scope: :session, local: true) do |f|%>
            <div class="form-group-row mb-4">
                <%= f.label :email, class: "col-sm col-form-label font-weight-bold light-text"%> 
                <div class="col-sm">
                    <%= f.email_field :email, placeholder: 'Email', class: "form-control shadow-sm"%> 
                </div>
            </div>

              <div class="form-group-row mb-4">
                <%= f.label :password, class: "col-sm col-form-label font-weight-bold light-text"%> 
                <div class="col-sm">
                    <%= f.password_field :password, placeholder: 'Mot de passe', class: "form-control shadow-sm"%> 
                </div>
            </div>
    
            <div class="row justify-content-center">
            
                <%=f.submit "Connexion", class: "btn btn-outline-light btn-lg"%>
                <%= link_to "Annuler", root_path, class: "btn btn-outline-light btn-lg ml-4"%>       
            </div>
        <% end %>
    </div>
</div>
